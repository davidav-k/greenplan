# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{java,xml}]
indent_size = 2

[*.{py}]
indent_size = 4

[*.{yml,yaml,json,md,ts,tsx,js,jsx,vue}]
indent_size = 2

[*.bat]
end_of_line = crlf

[*.ps1]
end_of_line = crlf